@using Second_MVC_App.Models
@model IEnumerable<Second_MVC_App.Models.Artist>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h3>See the current @Model.Count() Albums in our Database</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Formed</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Artist in Model)
            {
                <tr>
                    <td><a href="Artist/@Artist.Name">@Artist.Name</a></td>
                    <td>@Artist.Formed</td>
                </tr>

            }
        </tbody>


    </table>
</div>
